  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "node -e \"if(process.version < 'v20.0.0') { console.error('❌ Node.js 20以上が必要です。現在: ' + process.version); process.exit(1); }\" && npm run optimize-thumbnails && next build",
    "build:cloudflare": "node --version && npm run optimize-thumbnails && next build",
    "build:no-optimize": "next build",
    "start": "next start",
    "lint": "next lint",
    "deploy": "./deploy.sh",
    "optimize-thumbnails": "node scripts/optimize-thumbnails.js",
    "lighthouse": "node scripts/lighthouse-test.js",
    "lighthouse:ci": "lhci autorun",
    "lighthouse:report": "node scripts/lighthouse-report.js"
