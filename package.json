  "dependencies": {
    "@sls-next/lambda-at-edge": "^3.7.0",
    "@tailwindcss/postcss": "^4.1.13",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "framer-motion": "^11.11.17",
    "imagesloaded": "^5.0.0",
    "microcms-js-sdk": "^3.2.0",
    "next": "15.3.4",
    "react": "^18",
    "react-dom": "^18",
    "react-window": "^2.1.0",
    "sharp": "^0.34.4",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@types/imagesloaded": "^4.1.7",
